# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration for Tracing and Monitoring
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=github-analyzer-agent
LANGSMITH_WORKSPACE_ID=your_workspace_id_here

# GitHub Personal Access Token for MCP Server
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Agent Configuration
MAX_CONTEXT_TOKENS=180000
CONTEXT_SUMMARY_THRESHOLD=200000
AGENT_MODEL=gpt-4o-mini
